<div class="container mt-5">
  <h2 class="text-center mb-4">Posts</h2>
  <hr class="mb-4">

  <div class="mb-4 text-center">
    <h3 class="fw-bold">Admin: <%= @author %></h3>
  </div>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-journal-text"></i> <%= post[:title] %></h5>
            <p class="card-text"><%= post[:body] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Ver Estudantes", estudantes_path, class: "btn btn-primary" %>
  </div>
</div>